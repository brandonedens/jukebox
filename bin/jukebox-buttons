#!/usr/bin/python

import os
import serial
import sys
import time


XDOTOOL = "/usr/bin/xdotool"
DEFAULT_SERIAL = "/dev/ttyUSB0"

def find_program():
    os.system("export WID=\"%s search 'python' | head -1\"" % XDOTOOL)

def main():
    try:
        usb_port = sys.argv[1]
    except:
        usb_port = DEFAULT_SERIAL

    ser = serial.Serial(usb_port, 115200, timeout=1)
    ser.xonxoff = False
    ser.rtscts = False

    last_buttons = []
    ring = '           '
    try:
        red_state = 0
        blue_state = 0
        green_state = 0
        purple_state = 0
        yellow_state = 0
        last_tick = time.time()

        while True:
            c = ser.read(1)
            if len(c) != 1:
                continue
            ring = ring[1:] + c
            if ring[:4] != 'Juke':
                continue
            buttons = ring[4:]

            try:
                white = int(buttons[0])
                blue = int(buttons[1])
                green = int(buttons[2])
                purple = int(buttons[3])
                yellow = int(buttons[4])
                red = int(buttons[5])
            except IndexError:
                continue
            except ValueError:
                continue

            if buttons != last_buttons:
                print buttons
                last_buttons = buttons

            if red_state != red:
                if red == 1:
                    os.system("%s keydown a" % XDOTOOL)
                else:
                    os.system("%s keyup a" % XDOTOOL)

            if green_state != green:
                if green == 1:
                    os.system("%s keydown d" % XDOTOOL)
                else:
                    os.system("%s keyup d" % XDOTOOL)

            if purple_state != purple:
                if purple == 1:
                    os.system("%s keydown w" % XDOTOOL)
                else:
                    os.system("%s keyup w" % XDOTOOL)

            if yellow_state != yellow:
                if yellow == 1:
                    os.system("%s keydown s" % XDOTOOL)
                else:
                    os.system("%s keyup s" % XDOTOOL)

            if blue_state != blue:
                if blue == 1:
                    os.system("%s keydown p" % XDOTOOL)
                else:
                    os.system("%s keyup p" % XDOTOOL)

            red_state = red
            blue_state = blue
            green_state = green
            purple_state = purple
            yellow_state = yellow


            tick = time.time()

            if tick >= (last_tick + 0.03333333):
                if red_state == 1:
                    os.system("%s keydown a" % XDOTOOL)
                if blue_state == 1:
                    os.system("%s keydown a" % XDOTOOL)
                if green_state == 1:
                    os.system("%s keydown d" % XDOTOOL)
                if purple_state == 1:
                    os.system("%s keydown w" % XDOTOOL)
                if yellow_state == 1:
                    os.system("%s keydown s" % XDOTOOL)

                last_tick = tick

    finally:
        ser.close()

    ser.close()


#find_program()
main()

