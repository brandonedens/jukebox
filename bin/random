"""
Jukebox random music loader.
"""

###############################################################################
## Imports
###############################################################################

import os
os.environ['DJANGO_SETTINGS_MODULE'] = 'jukebox.settings'

from django.conf import settings
import logging
import time
import random

from jukebox.music.models import QueuedPlay, Play


###############################################################################
## Functions
###############################################################################

def main():
    while True:
        if Queue.objects.count() == 0:
            songs = Song.objects.all()
            song = random.choice(songs)
            new_track = Queue(song=song, random=True)
            new_track.save()
        else:
            # No music to queue, sleep 10 second then try again.
            time.sleep(random.randint(settings.RANDOM_SLEEP_MIN,
                                      settings.RANDOM_SLEEP_MAX))


###############################################################################
## Statements
###############################################################################

if __name__ == '__main__':
    main()

